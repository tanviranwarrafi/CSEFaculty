<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_registration"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/blue_grey_primary"
        android:orientation="vertical"
        android:padding="15dp"
        tools:context="com.rafistudio.csefaculty.StudentRegistration">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="10dp"
            android:text="Student Name:"
            android:textColor="#fff"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/name_student"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="#fff"
            android:inputType="text"
            android:textColor="#000"
            android:textColorHint="#000" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="10dp"
            android:text="Student ID:"
            android:textColor="#fff"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/id_student"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="#fff"
            android:inputType="number"
            android:textColor="#000"
            android:textColorHint="#000" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="10dp"
            android:text="Student Registration No:"
            android:textColor="#fff"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/regNo_student"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="#fff"
            android:inputType="number"
            android:textColor="#000"
            android:textColorHint="#000" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="10dp"
            android:text="Password:"
            android:textColor="#fff"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/pass_student"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="#fff"
            android:inputType="text"
            android:textColor="#000"
            android:textColorHint="#000" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="10dp"
            android:text="Session:"
            android:textColor="#fff"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/Session_student"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="#fff"
            android:inputType="text" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="10dp"
            android:text="Select Student Batch:"
            android:textColor="#fff"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/batch_spinner_student"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="10dp"
            android:text="Student Contact No:"
            android:textColor="#fff"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/phone_student"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="#fff"
            android:inputType="phone"
            android:textColor="#000"
            android:textColorHint="#000" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="10dp"
            android:text="Student Email:"
            android:textColor="#fff"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/email_student"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="#fff"
            android:inputType="textEmailAddress"
            android:textColor="#000"
            android:textColorHint="#000" />

        <Button
            android:id="@+id/SignUp_student"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="Sign Up"
            android:textSize="25sp"
            android:textStyle="bold" />
    </LinearLayout>
</ScrollView>
