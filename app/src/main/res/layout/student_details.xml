<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/student_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.rafistudio.csefaculty.StudentDetails">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="32dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Name: "
            android:textColor="@color/gray_deep"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/st_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textColor="@color/gray_deep"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Id no: "
            android:textColor="@color/gray_deep"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/st_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ID Number"
            android:textColor="@color/gray_deep"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Reg no: "
            android:textColor="@color/gray_deep"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/st_reg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reg Number"
            android:textColor="@color/gray_deep"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Session: "
            android:textColor="@color/gray_deep"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/st_session"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Session"
            android:textColor="@color/gray_deep"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Batch: "
            android:textColor="@color/gray_deep"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/st_batch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Batch"
            android:textColor="@color/gray_deep"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Phone no: "
            android:textColor="@color/gray_deep"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/st_contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contact No"
            android:textColor="@color/gray_deep"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Email: "
            android:textColor="@color/gray_deep"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/st_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email Address"
            android:textColor="@color/gray_deep"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

    <Button
        android:id="@+id/btnCall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="24dp"
        android:textSize="18sp"
        android:text="Call"
        android:textAllCaps="false"
        android:background="@color/app_red"
        android:textColor="@color/white"
        android:textStyle="bold" />
</LinearLayout>
