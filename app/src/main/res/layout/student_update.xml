<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/student_update"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_grey_primary"
    android:orientation="vertical"
    android:paddingTop="16dp"
    tools:context="com.rafistudio.csefaculty.StudentUpdate">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="Name: "
            android:textColor="#fff"
            android:textSize="22sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/personalName_update"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#fff"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="Password: "
            android:textColor="#fff"
            android:textSize="22sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/personalPass_update"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#fff"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="Contact: "
            android:textColor="#fff"
            android:textSize="22sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/PersonalContact_update"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#fff"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="Email: "
            android:textColor="#fff"
            android:textSize="22sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/PersonalEmail_update"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#fff"
            android:inputType="textEmailAddress"
            android:textSize="20sp" />

    </LinearLayout>

    <Button
        android:id="@+id/PersonalUpdateStudent"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp"
        android:text="Update"
        android:textSize="20sp"
        android:textStyle="bold" />

</LinearLayout>
