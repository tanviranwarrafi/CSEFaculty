<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_grey_primary"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context="com.rafistudio.csefaculty.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="Login"
        android:textSize="30sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <EditText
            android:id="@+id/s_id"
            android:layout_width="360dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:background="#f9f9f9"
            android:gravity="center"
            android:hint="Enter Student name"
            android:textColorHint="#000" />

        <EditText
            android:id="@+id/s_pass"
            android:layout_width="360dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:layout_weight="0.08"
            android:background="#f9f9f9"
            android:gravity="center"
            android:hint="Enter Password"
            android:textColorHint="#000" />

        <Button
            android:id="@+id/login_student_button"
            android:layout_width="140dp"
            android:layout_height="45dp"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:background="#1A5924"
            android:text="Login"
            android:textAllCaps="false"
            android:textSize="30dp"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:id="@+id/student_registration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="New Student!!! Please Register Yourself...."
        android:textColor="#000"
        android:textSize="18sp"
        android:textStyle="italic" />

    <Button
        android:id="@+id/s_students"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:text="All Students"
        android:textAllCaps="false"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:weightSum="1">

            <Button
                android:id="@+id/din"
                android:layout_width="80dp"
                android:layout_height="90dp"
                android:layout_gravity="left"
                android:layout_weight=".5"
                android:padding="5dp"
                android:text="Dean"
                android:textAllCaps="false"
                android:textSize="25dp" />

            <Button
                android:id="@+id/teachers"
                android:layout_width="80dp"
                android:layout_height="90dp"
                android:layout_gravity="right"
                android:layout_weight=".5"
                android:text="Teachers"
                android:textAllCaps="false"
                android:textSize="25dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:weightSum="1">

            <Button
                android:id="@+id/admin_main"
                android:layout_width="80dp"
                android:layout_height="90dp"
                android:layout_weight=".5"
                android:padding="5dp"
                android:text="Admin"
                android:textAllCaps="false"
                android:textSize="25dp" />

            <Button
                android:id="@+id/developer"
                android:layout_width="80dp"
                android:layout_height="90dp"
                android:layout_weight=".5"
                android:padding="5dp"
                android:text="Developer"
                android:textAllCaps="false"
                android:textSize="25dp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
