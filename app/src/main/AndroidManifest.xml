<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rafistudio.csefaculty">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:largeHeap="true"
        android:networkSecurityConfig="@xml/network_security_config"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Dean"/>
        <activity android:name=".Department"></activity>
        <activity android:name=".Developer"></activity>
        <activity android:name=".ShowStudents"></activity>
        <activity android:name=".StudentDetails"></activity>
        <activity android:name=".StudentPersonalDetails"></activity>
        <activity android:name=".StudentRegistration"/>
        <activity android:name=".StudentUpdate"/>
        <activity android:name=".TeacherList"/>
        <activity android:name=".TeacherPersonalDetails"/>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>